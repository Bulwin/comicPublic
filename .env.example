# Пример файла .env для проекта DailyComicBot
# Скопируйте этот файл в .env и заполните своими значениями

# API ключи
OPENAI_API_KEY=sk-proj-your_openai_api_key_here
PERPLEXITY_API_KEY=pplx-your_perplexity_api_key_here

# Параметры для Assistants API - ассистенты-сценаристы по типам
SCRIPTWRITER_A_ASSISTANT_ID=asst_your_scriptwriter_a_assistant_id
SCRIPTWRITER_B_ASSISTANT_ID=asst_your_scriptwriter_b_assistant_id
SCRIPTWRITER_C_ASSISTANT_ID=asst_your_scriptwriter_c_assistant_id
SCRIPTWRITER_D_ASSISTANT_ID=asst_your_scriptwriter_d_assistant_id
SCRIPTWRITER_E_ASSISTANT_ID=asst_your_scriptwriter_e_assistant_id

# Параметры для Assistants API - ассистенты-жюри по типам
JURY_A_ASSISTANT_ID=asst_your_jury_a_assistant_id
JURY_B_ASSISTANT_ID=asst_your_jury_b_assistant_id
JURY_C_ASSISTANT_ID=asst_your_jury_c_assistant_id
JURY_D_ASSISTANT_ID=asst_your_jury_d_assistant_id
JURY_E_ASSISTANT_ID=asst_your_jury_e_assistant_id

# Параметры для публикации
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHANNEL_ID=your_telegram_channel_id
TELEGRAM_ADMIN_CHAT_ID=your_telegram_admin_chat_id
PUBLISHER_BOT_TOKEN=your_publisher_bot_token
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# Настройки времени (для тестирования)
TIMEZONE=Europe/Nicosia
NEWS_COLLECTION_HOUR=13
NEWS_COLLECTION_MINUTE=0
PUBLICATION_TIME_HOUR=13
PUBLICATION_TIME_MINUTE=15

# Настройки системы
LOG_LEVEL=INFO
DEBUG_MODE=False
